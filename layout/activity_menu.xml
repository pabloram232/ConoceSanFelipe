<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash">


    <Button
        android:id="@+id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/historia"
        android:text="@string/history"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"/>

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="147dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_history"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/galeria"
        android:text="@string/gallery"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_bares"
        android:layout_width="133dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_history"
        android:layout_marginTop="182dp"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/bar"
        android:text="@string/bares"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_restaurant"
        android:layout_width="145dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/btn_gallery"
        android:layout_alignTop="@+id/btn_bares"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/restaurant"
        android:text="@string/restaurant"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_hotels"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_history"
        android:layout_marginBottom="182dp"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/hotel"
        android:text="@string/hotel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_games"
        android:layout_width="146dp"
        android:layout_height="61dp"
        android:layout_alignLeft="@+id/btn_gallery"
        android:layout_alignStart="@+id/btn_gallery"
        android:layout_alignTop="@+id/btn_hotels"
        android:layout_weight="1"
        android:alpha="0.75"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/juego"
        android:text="@string/games"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <ImageButton
        android:id="@+id/btn_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_history"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="99dp"
        android:alpha="0.75"
        android:background="@drawable/face"
        android:layout_alignRight="@+id/btn_history" />

    <ImageButton
        android:id="@+id/btn_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_gallery"
        android:layout_alignTop="@+id/btn_face"
        android:background="@drawable/internet"
        android:alpha="0.75"
        android:layout_alignLeft="@+id/btn_gallery" />

    <ImageButton
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_gallery"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/acerca"
        android:layout_alignRight="@+id/btn_gallery" />


</RelativeLayout>
